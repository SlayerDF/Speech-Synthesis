<UserControl x:Class="WPFSpeaker.Pages.Settings.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid Width="250" Height="250">
        <ScrollViewer>
            <StackPanel Margin="0,0,30,0">
                <TextBlock Margin="0,5,0,0" Text="Description" Style="{StaticResource Heading2}" />
                <TextBlock Text="The program allows you synthesize voice using Microsoft Speech Platform. You may choose voice installed on computer and output device to synthesize to." Margin="0,0,0,8" TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

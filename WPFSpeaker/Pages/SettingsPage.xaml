<UserControl x:Class="WPFSpeaker.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI">
    <Grid>
        <mui:ModernTab Layout="List" ListWidth="100" SelectedSource="/Pages/Settings/General.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="General" Source="/Pages/Settings/General.xaml" />
                <mui:Link DisplayName="Appearance" Source="/Pages/Settings/Appearance.xaml" />
                <mui:Link DisplayName="Hotkeys" Source="/Pages/Settings/Hotkeys.xaml" />
                <mui:Link DisplayName="About" Source="/Pages/Settings/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
